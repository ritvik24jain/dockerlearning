pipeline{
    agent any
    stages{
        stage('GIT pull'){
            steps{
                checkout scm
            }
        }
        stage('Docker build'){
            steps{
                sh 'sudo docker build -t ritvik:v1 .'
            }
        }
        stage('Docker Run'){
            steps{
                sh 'sudo docker run -d -p 80:5000 ritvik:v1'
                
            }
        }
    }
}
